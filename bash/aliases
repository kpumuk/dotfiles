# ls
alias ls="ls -GF"
alias la="ls -a"
alias ll="ls -lhF"
alias lla="ll -a"

# df
alias dfh="df -H"
alias duh="du -hs"

# rails
alias sc="script/console"
alias ss="script/server"
alias sg="script/generate"
alias tlog="tail -f log/development.log"
alias migrate='rake db:migrate && rake db:migrate RAILS_ENV=test'
alias rst='touch tmp/restart.txt'

# other
alias b="bundle exec"
alias bi="bundle install"
alias bu="bundle update"
alias m="mate ."
alias s="subl ."
alias httpdump='sudo tcpdump -i en1 -n -s 0 -w - | grep -a -o -E "Host\: .*|GET \/.*"'
alias memflush="echo flush_all | nc localhost 11211"
alias ann="annotate -p before -i -e tests,fixtures"
alias please="sudo"

# Some Git aliases
alias ga="git add"
alias gb="git branch"
alias gba="git branch --all"
alias gbr="git branch --remote"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gd="git diff"
alias gdc="git diff --cached"
alias gdw="git diff --color-words"
alias gci="git commit"
alias gca="git commit -a"
alias gf="git fetch"
alias gfr="git fetch && git rebase"
alias gg='git log --graph --pretty=format:"%Cred%h%Creset —%C(yellow)%d%Creset %s - %Cblue%an%Creset %Cgreen(%cr)%Creset" --abbrev-commit --date=relative'
alias gl="git pull"
alias glq="git pull --quiet"
alias glr="git pull --rebase"
alias glrq="git pull --rebase --quiet"
alias glp="git log --patch"
alias glo="git log --oneline --decorate"
alias gm="git merge --no-ff"
alias gmt="git mergetool"
alias gp="git push"
alias gr="git rebase"
alias gri="git rebase -i"
alias griu="git rebase -i @{u}"
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gs="git status -sb"
alias gsf="git status"
alias gss="git status"
alias gu="git up"
alias gw="git wtf"
alias пы="git status"
alias пыщ="git status"
